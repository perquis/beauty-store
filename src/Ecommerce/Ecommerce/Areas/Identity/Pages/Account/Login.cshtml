@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>
<div class="grid-cols-1 grid gap-4 md:grid-cols-2">
    <div class="md:w-1/3">
        <section>
            <form id="account" method="post" class="space-y-4">
                <h2 class="text-xl font-semibold">Use a local account to log in.</h2>
                <hr class="border-gray-300" />
                <div asp-validation-summary="ModelOnly" class="text-red-600" role="alert"></div>
                <div class="relative">
                    <input asp-for="Input.Email" class="input input-bordered w-full" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-red-600"></span>
                </div>
                <div class="relative">
                    <input asp-for="Input.Password" class="input input-bordered w-full" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-red-600"></span>
                </div>
                <div class="flex items-center space-x-2">
                    <input class="checkbox" asp-for="Input.RememberMe" />
                    <label asp-for="Input.RememberMe" class="label">@Html.DisplayNameFor(m => m.Input.RememberMe)</label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="btn btn-primary w-full">Log in</button>
                </div>
                <div class="mt-4 space-y-2">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword" class="link">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="link">Register as a new user</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="link">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
    <div class="md:w-2/3">
        <section>
            <h3 class="text-lg font-semibold">Use another service to log in.</h3>
            <hr class="border-gray-300" />
            @if ((Model.ExternalLogins?.Count ?? 0) == 0)
            {
                <div>
                    <p>
                        There are no external authentication services configured. See this
                        <a href="https://go.microsoft.com/fwlink/?LinkID=532715" class="link">article about setting up this ASP.NET application to support logging in via external services</a>.
                    </p>
                </div>
            }
            else
            {
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="space-y-4">
                    <div>
                        <p>
                            @foreach (var provider in Model.ExternalLogins!)
                            {
                                <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                            }
                        </p>
                    </div>
                </form>
            }
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
